<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="project_recurring_view_form" model="ir.ui.view">
            <field name="name">project_recurring_view_form</field>
            <field name="model">project.recurring.expense</field>
            <field name="arch" type="xml">
                <form string="project_recurring_form">
                    <sheet>
                        <div class="oe_title">
                             <label for="name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="project_id"/>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="recurring_mode"/>
                                <field name="last_generated_date" readonly="1"/>
                            </group>
                            <group>
                                <field name="quantity"/>
                                <field name="cost_price"/>
                                <field name="is_billable"/>
                                <field name="billing_amount"/>

                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="project_recurring_expense_view_tree" model="ir.ui.view">
            <field name="name">project_expense_view_tree</field>
            <field name="model">project.recurring.expense</field>
            <field name="arch" type="xml">
                <tree string="project_expense_tree">
                    <field name="name"/>
                    <field name="project_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="quantity"/>
                    <field name="cost_price"/>
                    <field name="recurring_mode"/>
                    <field name="last_generated_date" readonly="1"/>
                </tree>
            </field>
        </record>

        <record id="project_recurring_expense_search_view" model="ir.ui.view">
           <field name="name">project_recurring_expense_search_view</field>
           <field name="model">project.recurring.expense</field>
            <field name="arch" type="xml">
                <search string="recurring_expense_search_view">
                    <field name="name"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                     <field name="project_id"/>

                    <filter name="is_billable" string="billable is True" domain="[('is_billable','=',True)]"/>
                    <filter name="is_billable" string="billable is False" domain="[('is_billable','=',False)]"/>
                    <group>
                        <filter name="project_id" string="by_project" context="{'group_by':'project_id'}"></filter>
                    </group>

            </search>
           </field>
        </record>

          <record id="auto_generate" model="ir.cron">
            <field name="name">Auto Expense Generation</field>
            <field name="active" eval="True" />
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall">1</field>
<!--            <field name="nextcall" >2020-03-17</field>-->
           <field name="model_id" ref="model_project_recurring_expense"/>
             <field name="state">code</field>
             <field name="code">model.auto_generate_expenses()</field>
         </record>

        <record id="expense_last_backup_date" model="ir.config_parameter">
            <field name="key">expense.last.backup.date</field>
            <field name="value">2020-03-15</field>
        </record>

        <record id="project_recurring_expense_action" model="ir.actions.act_window">
            <field name="name">Recurring Expenses</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">project.recurring.expense</field>
            <field name="view_mode">tree,form</field>
        </record>



        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="project_recurring_expense_menu" name="Recurring Expenses" parent="project_management.project_expense_root" action="project_recurring_expense_action" sequence="2"/>



    </data>
</odoo>